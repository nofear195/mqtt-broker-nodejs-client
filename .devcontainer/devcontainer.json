{
	"name": "Node.js & TypeScript",
	"image": "mcr.microsoft.com/devcontainers/typescript-node:0-18",
	"features": {
		"ghcr.io/devcontainers/features/git:1": {}
	},
	"runArgs": [
        "--network=mqtt-broker_default"
    ],
	"containerEnv": {
        "TZ": "Asia/Taipei"
    },
	"customizations": {
		"vscode": {
			"extensions": [
				"esbenp.prettier-vscode",
				"dbaeumer.vscode-eslint"
			]
		}
	}
}